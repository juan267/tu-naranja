<%= simple_form_for(@lote, url: farm_lote_path(params[:farm_id], @lote),html:{class: "form-signin"}, method: :patch) do |f| %>
  <%= f.error_notification %>

  <h2>Editar Lote <%= @lote.name %></h2>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :size, required: true %>
    <%= f.input :fruit_type, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Editar" %>
  </div>
  <%= link_to "Atras", :back %>

<% end %>